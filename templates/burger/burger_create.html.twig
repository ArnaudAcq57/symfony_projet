{% extends 'base.html.twig' %}

{% block title %}Cr√©er un burger{% endblock %}

{% block body %}
    <div class="container">
        <h1>üçî Cr√©er votre burger</h1>

        <form method="post" class="burger-form">
            <div class="form-group">
                <label for="name">üè∑Ô∏è Nom du burger</label>
                <input type="text" id="name" name="name" required placeholder="Ex: Le D√©licieux">
            </div>

            <div class="form-group">
                <label for="description">üìù Description</label>
                <textarea id="description" name="description" rows="2" placeholder="D√©crivez votre burger..."></textarea>
            </div>

            <div class="form-group">
                <label for="price">üí∞ Prix (‚Ç¨)</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required placeholder="12.50">
            </div>

            <div class="form-group">
                <label for="pain_id">üçû Pain</label>
                <select id="pain_id" name="pain_id" required>
                    <option value="">-- Choisir un pain --</option>
                    {% for pain in pains %}
                        <option value="{{ pain.id }}">{{ pain.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label>üßÖ Oignons (optionnel)</label>
                <div class="checkbox-grid-compact">
                    {% for oignon in oignons %}
                        <label class="checkbox-label-compact">
                            <input type="checkbox" id="oignon_{{ oignon.id }}" name="oignons[]" value="{{ oignon.id }}">
                            {{ oignon.name }}
                        </label>
                    {% endfor %}
                </div>
            </div>

            <div class="form-group">
                <label>ü•Ñ Sauces (optionnel)</label>
                <div class="checkbox-grid-compact">
                    {% for sauce in sauces %}
                        <label class="checkbox-label-compact">
                            <input type="checkbox" id="sauce_{{ sauce.id }}" name="sauces[]" value="{{ sauce.id }}">
                            {{ sauce.name }}
                        </label>
                    {% endfor %}
                </div>
            </div>

            <div class="actions-compact">
                <button type="submit" class="btn btn-success">‚ú® Cr√©er le burger</button>
            </div>
        </form>

        <div class="nav-links">
            <a href="{{ path('app_burger_list') }}" class="btn btn-back">‚Üê Retour</a>
        </div>
    </div>

    <style>
        .form-group {
            margin-bottom: 1.2rem;
        }
        
        .checkbox-grid-compact {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 0.6rem;
            margin-top: 0.6rem;
        }
        
        .checkbox-label-compact {
            display: flex;
            align-items: center;
            padding: 0.5rem 0.7rem;
            background: var(--light-color);
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: var(--transition);
            border: 1px solid var(--border-color);
            font-size: 0.9rem;
        }
        
        .checkbox-label-compact:hover {
            background: white;
            box-shadow: var(--shadow);
            border-color: var(--secondary-color);
        }
        
        .checkbox-label-compact input[type="checkbox"] {
            margin-right: 0.5rem;
            transform: scale(1.1);
        }
        
        .actions-compact {
            margin: 1.5rem 0;
            padding: 0.8rem;
            background: var(--light-color);
            border-radius: var(--border-radius);
            text-align: center;
        }
        
        /* R√©duire la taille des inputs */
        input[type="text"],
        input[type="number"],
        textarea,
        select {
            padding: 0.8rem;
            margin: 0.3rem 0 0.8rem 0;
        }
        
        /* R√©duire la taille des labels */
        label {
            font-size: 0.95rem;
            margin-bottom: 0.3rem;
        }
        
        /* Container plus compact */
        .container {
            padding: 1.5rem;
            margin: 1.5rem auto;
        }
        
        /* Titre plus compact */
        h1 {
            font-size: 2.2rem;
            margin-bottom: 1.2rem;
            padding-bottom: 0.8rem;
        }
    </style>
{% endblock %}