{% extends 'base.html.twig' %}

{% block title %}Liste des burgers{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des burgers</h1>
        <ul>
            {% for burger in burgers %}
                <li>
                    <a href="{{ path('app_burger_show', {id: burger.id}) }}">{{ burger.name }}</a> - {{ burger.price }}€
                </li>
            {% else %}
                <li>Aucun burger trouvé.</li>
            {% endfor %}
        </ul>
        <p><a href="{{ path('burger_create') }}">Créer un nouveau burger</a></p>
    </div>
{% endblock %}