{% extends 'base.html.twig' %}

{% block title %}Liste des pains{% endblock %}

{% block body %}
    <div class="container">
        <h1>🍞 Liste des pains</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        
        <ul class="burger-list">
            {% for pain in pains %}
                <li>
                    <span>{{ pain.name }}</span>
                    <div>
                        <form method="post" action="{{ path('pain_delete', {'id': pain.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce pain ?');" style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pain.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">🗑️</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <li>Aucun pain trouvé.</li>
            {% endfor %}
        </ul>
        
        <div class="nav-links">
            <a href="{{ path('pain_new') }}" class="btn btn-success">+ Créer un nouveau pain</a>
            <a href="{{ path('app_burger_list') }}" class="btn btn-back">← Retour aux burgers</a>
        </div>
    </div>
{% endblock %}
